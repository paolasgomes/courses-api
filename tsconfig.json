{
  "compilerOptions": {
    "outDir": "dist",

    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["esnext"],
    "types": ["node"],
    "strict": true,
    "noUncheckedSideEffectImports": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "*.config.*"]
}
